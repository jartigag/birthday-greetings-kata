{
  "testEnvironment": "node",
  "moduleFileExtensions": ["ts", "js"],
  "transform": {
    "\\.(ts|tsx)$": "ts-jest"
  },
  "roots": ["<rootDir>/__tests__", "<rootDir>/src"],
  "testRegex": ".*\\.test\\.ts$",
  "moduleNameMapper": {
    "^@domain/(.*)$": "<rootDir>/src/domain/$1",
    "^@infrastructure/(.*)$": "<rootDir>/src/infrastructure/$1",
    "^@services/(.*)$": "<rootDir>/src/services/$1"
  }
}
